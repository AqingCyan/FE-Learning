/**index.wxss**/
page {
  background: url(https://pic3.zhimg.com/80/v2-23832d124ee4f19ab8f7a6dde9a6297e_hd.jpg);
  background-size: cover;
  margin: 0;
  padding: 0;
}

.title {
  position: fixed;
  width: 400rpx;
  height: 200rpx;
  padding: 20rpx;
  top: 350rpx;
  left: 155rpx;
  background: rgba( 0, 0, 0, .7);
  color: #fff;
  font-size: 20px;
  line-height: 100rpx;
  text-align: center;
  border-radius: 20rpx;
}

.top {
  width: 750rpx;
  height: 290rpx;
  text-align: center;
}

.top-title {
  font-size: 25px;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.timeShow {
  width: 80%;
  margin: 30rpx auto;
  display: flex;
  font-size: 40px;
  background: #000;
  color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
}

.time {
  flex: 1;
}
.time {
  border-right: 2px solid #fff;
}
.time:nth-child(2) {
  border: none;
}

.mid {
  width: 640rpx;
  margin: 0 auto;
}

.mid button {
  margin: 50rpx auto;
}

.picker {
  height: 400rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
}

.btn {
  display: flex;
  text-align: center;
  height: 80rpx;
  background: pink;
  line-height: 80rpx;
}
.btn view {
  flex: 1;
}

.picker-view {
  height: 320rpx;
  text-align: center;
}